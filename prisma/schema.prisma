model Pokemon {
  id                     String   @id @default(cuid())
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  name                   String
  sprite                 String
  image                  String
  weight                 Int
  height                 Int
  hpBaseStat             Int
  attackBaseStat         Int
  defenseBaseStat        Int
  specialAttackBaseStat  Int
  specialDefenseBaseStat Int
  speedBaseStat          Int
  types                  String[]
  pokedexId              Int
  // collections            PokemonCollection[]
}
